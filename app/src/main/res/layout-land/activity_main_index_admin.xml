<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.codinginfinity.android.MainActivity"
    android:background="#fefefe"
    android:layoutMode="opticalBounds"
    android:id="@+id/Screen_Layout"
    android:weightSum="1"
    android:layout_marginTop="10dp"

    android:orientation="horizontal"
    android:baselineAligned="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">
        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:gravity="top|center_vertical"
                android:measureWithLargestChild="true"
                android:clickable="true"
                android:onClick="addPaperFunc">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="false">

                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="110dp"
                        android:id="@+id/imgBtn_Add"
                        android:background="@drawable/roundcorner"
                        android:cropToPadding="false"
                        android:focusableInTouchMode="false"
                        android:clickable="false"
                        android:backgroundTintMode="src_over"
                        android:layout_gravity="left"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"/>


                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="110dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentBottom="false"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:paddingTop="12dp">

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:gravity="center_vertical|center_horizontal">

                            <ImageView
                                android:layout_width="120dp"
                                android:layout_height="90dp"
                                android:id="@+id/imageView5"
                                android:background="@mipmap/ic_add"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true"
                                android:layout_marginTop="0dp"
                                android:layout_marginBottom="7dp"
                                android:layout_alignBottom="@+id/imgBtn_Add" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:text="Add Publication     "
                                android:id="@+id/textView7"
                                android:textColor="#ffffff"
                                android:textSize="23dp"
                                android:gravity="center_vertical|right"
                                android:layout_centerVertical="true"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentEnd="true" />
                        </TableRow>
                    </TableLayout>
                </RelativeLayout>
            </TableRow>

            <Space
                android:layout_width="20px"
                android:layout_height="20px" />

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:gravity="top|center_vertical"
                android:measureWithLargestChild="true"
                android:id="@+id/TableRow1"
                android:clickable="true"
                android:onClick="viewPapersFunc">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/Relative1">

                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="110dp"
                        android:id="@+id/imageButton"
                        android:background="@drawable/roundcorner"
                        android:cropToPadding="false"
                        android:focusableInTouchMode="false"
                        android:clickable="false"
                        android:backgroundTintMode="src_over"
                        android:layout_gravity="left"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true" />

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="110dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentBottom="false"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:paddingTop="12dp">

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:gravity="center_vertical|center_horizontal">

                            <ImageView
                                android:layout_width="120dp"
                                android:layout_height="90dp"
                                android:id="@+id/imageView2"
                                android:background="@mipmap/ic_view"
                                android:layout_alignBottom="@+id/imageButton"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentBottom="false"
                                android:layout_row="0" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:text=" View Publication  "
                                android:id="@+id/textView3"
                                android:textColor="#ffffff"
                                android:textSize="23dp"
                                android:gravity="center_vertical"
                                android:layout_alignWithParentIfMissing="false"
                                android:layout_centerVertical="true"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentEnd="true"
                                android:layout_gravity="center_vertical|right" />
                        </TableRow>
                    </TableLayout>
                </RelativeLayout>
            </TableRow>

            <Space
                android:layout_width="20px"
                android:layout_height="20px" />

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:gravity="top|center_vertical"
                android:measureWithLargestChild="true"
                android:clickable="true"
                android:onClick="editUserFunc">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="110dp"
                        android:id="@+id/imgBtn_View"
                        android:background="@drawable/roundcorner"
                        android:cropToPadding="false"
                        android:focusableInTouchMode="false"
                        android:clickable="false"
                        android:backgroundTintMode="src_over"
                        android:layout_gravity="left"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"/>


                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="110dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentBottom="false"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:paddingTop="12dp">


                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:gravity="center_vertical|center_horizontal">


                            <ImageView
                                android:layout_width="120dp"
                                android:layout_height="90dp"
                                android:id="@+id/imageView4"
                                android:background="@mipmap/ic_edit"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true"
                                android:layout_alignBottom="@+id/imgBtn_Add" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:text="User Profile            "
                                android:id="@+id/textView6"
                                android:textColor="#ffffff"
                                android:textSize="23dp"
                                android:gravity="center_vertical|right"
                                android:layout_centerVertical="true"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentEnd="true" />
                        </TableRow>
                    </TableLayout>
                </RelativeLayout>
            </TableRow>

            <Space
                android:layout_width="20px"
                android:layout_height="20px" />

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:gravity="top|center_vertical"
                android:measureWithLargestChild="true"
                android:id="@+id/tableRow"
                android:clickable="true"
                android:onClick="viewPapersFunc" >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/relativeLayout" >

                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="110dp"
                        android:id="@+id/imageButton3"
                        android:background="@drawable/roundcorner"
                        android:cropToPadding="false"
                        android:focusableInTouchMode="false"
                        android:clickable="false"
                        android:backgroundTintMode="src_over"
                        android:layout_gravity="left"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true" />

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="110dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentBottom="false"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:paddingTop="12dp" >

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:gravity="center_vertical|center_horizontal" >

                            <ImageView
                                android:layout_width="120dp"
                                android:layout_height="90dp"
                                android:id="@+id/imageView6"
                                android:background="@mipmap/ic_add_researcher"
                                android:layout_alignBottom="@+id/imageButton3"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentBottom="false"
                                android:layout_row="0"
                                android:layout_column="0" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:text="Add Researcher    "
                                android:id="@+id/textView8"
                                android:textColor="#ffffff"
                                android:textSize="23dp"
                                android:gravity="center_vertical"
                                android:layout_alignWithParentIfMissing="false"
                                android:layout_centerVertical="true"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentEnd="true"
                                android:layout_gravity="center" />
                        </TableRow>
                    </TableLayout>
                </RelativeLayout>
            </TableRow>

            <Space
                android:layout_width="20px"
                android:layout_height="20px" />

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:gravity="top|center_vertical"
                android:measureWithLargestChild="true"
                android:id="@+id/tableRow"
                android:clickable="true"
                android:onClick="viewPapersFunc" >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/relativeLayout" >

                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="110dp"
                        android:id="@+id/imageButton3"
                        android:background="@drawable/roundcorner"
                        android:cropToPadding="false"
                        android:focusableInTouchMode="false"
                        android:clickable="false"
                        android:backgroundTintMode="src_over"
                        android:layout_gravity="left"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true" />

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="110dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentBottom="false"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:paddingTop="12dp" >

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:gravity="center_vertical|center_horizontal" >

                            <ImageView
                                android:layout_width="120dp"
                                android:layout_height="90dp"
                                android:id="@+id/imageView6"
                                android:background="@mipmap/ic_groups"
                                android:layout_alignBottom="@+id/imageButton3"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentBottom="false"
                                android:layout_row="0"
                                android:layout_column="0" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:text="Groups                    "
                                android:id="@+id/textView8"
                                android:textColor="#ffffff"
                                android:textSize="23dp"
                                android:gravity="center_vertical"
                                android:layout_alignWithParentIfMissing="false"
                                android:layout_centerVertical="true"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentEnd="true"
                                android:layout_gravity="center" />
                        </TableRow>
                    </TableLayout>
                </RelativeLayout>
            </TableRow>

            <Space
                android:layout_width="20px"
                android:layout_height="20px" />

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:gravity="top|center_vertical"
                android:measureWithLargestChild="true"
                android:id="@+id/tableRow2"
                android:clickable="true"
                android:onClick="viewPapersFunc" >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/relativeLayout2" >

                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="110dp"
                        android:id="@+id/imageButton4"
                        android:background="@drawable/roundcorner"
                        android:cropToPadding="false"
                        android:focusableInTouchMode="false"
                        android:clickable="false"
                        android:backgroundTintMode="src_over"
                        android:layout_gravity="left"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true" />

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="110dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentBottom="false"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:paddingTop="12dp" >

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:gravity="center_vertical|center_horizontal" >

                            <ImageView
                                android:layout_width="120dp"
                                android:layout_height="90dp"
                                android:id="@+id/imageView7"
                                android:background="@mipmap/ic_publication_types"
                                android:layout_alignBottom="@+id/imageButton4"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentBottom="false"
                                android:layout_row="0"
                                android:layout_column="0" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:text="Publication Types"
                                android:id="@+id/textView9"
                                android:textColor="#ffffff"
                                android:textSize="23dp"
                                android:gravity="center_vertical"
                                android:layout_alignWithParentIfMissing="false"
                                android:layout_centerVertical="true"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentEnd="true"
                                android:layout_gravity="center" />
                        </TableRow>
                    </TableLayout>
                </RelativeLayout>
            </TableRow>
        </TableLayout>
    </ScrollView>
</LinearLayout>
