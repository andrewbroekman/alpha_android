<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.codinginfinity.android.MainActivity"
    android:background="#dcdcdc">

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/imgBtn_Add"
        android:background="@mipmap/ic_add_"
        android:cropToPadding="false"
        android:focusableInTouchMode="false"
        android:clickable="true"
        android:backgroundTintMode="src_over"
        android:layout_above="@+id/imgBtn_EditProfile"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="addPaperFunc"/>

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/imgBtn_View"
        android:layout_alignTop="@+id/imgBtn_Add"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@mipmap/ic_view_"
        android:clickable="true"
        android:backgroundTintMode="src_over"
        android:onClick="viewPapersFunc"/>

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/imgBtn_EditProfile"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@mipmap/ic_edit_"
        android:clickable="true"
        android:backgroundTintMode="src_over"
        android:onClick="editUserFunc"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblUserInfo"
        android:layout_alignParentTop="true"
        android:text="@string/userExample"
        android:textSize="12pt"
        android:layout_alignRight="@+id/imgBtn_View"
        android:layout_alignEnd="@+id/imgBtn_View"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
