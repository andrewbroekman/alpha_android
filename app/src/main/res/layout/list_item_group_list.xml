<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/list_view_item_name_group_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_toStartOf="@+id/list_view_item_view_group_list"
        android:layout_toLeftOf="@+id/list_view_item_view_group_list"
        android:focusable="true"
        android:clickable="true" />

    <ImageButton
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:id="@+id/list_view_item_view_group_list"
        android:background="@android:drawable/ic_menu_view"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:clickable="true" />

</RelativeLayout>