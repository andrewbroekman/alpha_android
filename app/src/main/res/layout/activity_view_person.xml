<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.codinginfinity.android.ViewPerson">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edtName"
        android:layout_marginTop="25dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:enabled="false"
        android:singleLine="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Username" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edtEmail"
        android:enabled="false"
        android:singleLine="true"
        android:layout_below="@+id/edtUnitsEarned"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:hint="Email Adress" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:enabled="false"
        android:id="@+id/edtUnitsEarned"
        android:layout_below="@+id/editText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Units Earned" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:text="Edit"
        android:id="@+id/btnEdit"
        android:layout_marginBottom="118dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="btnEditOnClick"
        android:enabled="true"
        android:clickable="true"
        android:layout_toStartOf="@+id/btnRe"
        android:layout_toLeftOf="@+id/btnRe" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:text="View Papers"
        android:id="@+id/btnView"
        android:layout_alignTop="@+id/btnEdit"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="btnViewOnClick"
        android:enabled="true"
        android:clickable="true"
        android:layout_toEndOf="@+id/btnRe"
        android:layout_toRightOf="@+id/btnRe" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:text="Cancel"
        android:id="@+id/btnCancel"
        android:layout_below="@+id/btnView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        android:visibility="invisible"
        android:enabled="false"
        android:onClick="btnCancelOnClick"
        android:clickable="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Reports"
        android:id="@+id/btnRe"
        android:onClick="btnReportOnClick"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@+id/btnEdit"
        android:layout_above="@+id/btnCancel" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edtCon"
        android:enabled="false"
        android:singleLine="true"
        android:layout_below="@+id/edtEmail"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/edtEmail"
        android:layout_alignEnd="@+id/edtEmail"
        android:hint="Contact Details" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/edtPassword"
        android:enabled="false"
        android:layout_below="@+id/edtCon"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:hint="Password" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:enabled="false"
        android:singleLine="true"
        android:layout_below="@+id/edtName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/edtName"
        android:layout_alignEnd="@+id/edtName"
        android:hint="Research Group" />/>


</RelativeLayout>
