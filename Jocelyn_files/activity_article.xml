<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/up"
    tools:context="com.example.jocelyn.testing.Article"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Author: "
        android:id="@+id/Author"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Title: "
        android:id="@+id/Title"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/Author"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Year: "
        android:id="@+id/Year"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/Title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:text="Edition: "
    android:id="@+id/Edition"
    android:layout_marginTop="20dp"
    android:layout_below="@+id/Year"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Type: "
        android:layout_marginTop="20dp"
        android:id="@+id/Type"
        android:layout_below="@+id/Edition"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="ISBN: "
        android:layout_marginTop="20dp"
        android:id="@+id/ISBN"
        android:layout_below="@+id/Type"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_marginTop="20dp"
        android:text="Publishing house: "
        android:id="@+id/PubHouse"
        android:layout_below="@+id/ISBN"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=" None"
        android:id="@+id/Author_value"
        android:layout_toRightOf="@+id/Author"
     />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=" None"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/Author_value"
        android:id="@+id/Title_value"
        android:layout_toRightOf="@+id/Title"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=" None"
        android:id="@+id/Year_value"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/Title_value"
        android:layout_toRightOf="@+id/Year"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=" None"
        android:id="@+id/Edition_value"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/Year_value"
        android:layout_toRightOf="@+id/Edition"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=" None"
        android:id="@+id/Type_value"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/Edition_value"
        android:layout_toRightOf="@+id/Type"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=" None"
        android:id="@+id/ISBN_value"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/Type_value"
        android:layout_toRightOf="@+id/ISBN"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=" None"
        android:id="@+id/PubHouse_value"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/ISBN_value"
        android:layout_toRightOf="@+id/PubHouse"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK"
        android:id="@+id/button_OK"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/PubHouse"
        android:layout_centerHorizontal="true"
        android:onClick="nextActivity"/>


</RelativeLayout>
