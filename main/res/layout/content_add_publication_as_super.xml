<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
    <RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.example.stuart.alphaandroidinterface.AddPublicationAsSuper"
        tools:showIn="@layout/activity_add_publication_as_super">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Name"
                android:id="@+id/name_view"
                android:layout_alignParentTop="true"
                android:layout_marginTop="60dp"
                android:layout_alignStart="@+id/target_view"
                android:textSize="22dp"
                android:textColor="#000"
                android:layout_gravity="center_vertical" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Supervisor"
                android:id="@+id/super_view"
                android:layout_marginTop="30dp"
                android:layout_below="@+id/name_view"
                android:layout_alignParentStart="true"
                android:textSize="22dp"
                android:textColor="#000"
                android:layout_gravity="center_vertical" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/name_edit"
                android:layout_above="@+id/super_view"
                android:layout_alignStart="@+id/super_edit"
                android:layout_alignEnd="@+id/super_edit"
                android:hint="Name of Publication"
                android:textColor="#000"
                android:textSize="18dp"
                android:layout_gravity="center_vertical" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/super_edit"
                android:layout_above="@+id/type_view"
                android:layout_alignStart="@+id/type_edit"
                android:layout_alignParentEnd="true"
                android:hint="Name of Supervisor"
                android:textColor="#000"
                android:textSize="18dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Type"
                android:id="@+id/type_view"
                android:layout_marginTop="30dp"
                android:layout_below="@+id/super_view"
                android:layout_alignEnd="@+id/super_view"
                android:textSize="22dp"
                android:textColor="#000" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/type_edit"
                android:layout_alignBottom="@+id/type_view"
                android:layout_alignStart="@+id/submit"
                android:layout_alignParentEnd="true"
                android:hint="Book, Journal etc"
                android:textColor="#000"
                android:textSize="18dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="State"
                android:id="@+id/state_view"
                android:layout_below="@+id/type_view"
                android:layout_alignStart="@+id/type_view"
                android:layout_marginTop="30dp"
                android:textSize="22dp"
                android:textColor="#000" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/state_edit"
                android:layout_above="@+id/target_view"
                android:layout_alignStart="@+id/type_edit"
                android:layout_alignEnd="@+id/type_edit"
                android:hint="Not started, published etc"
                android:textColor="#000"
                android:textSize="18dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Target"
                android:id="@+id/target_view"
                android:layout_marginTop="30dp"
                android:layout_below="@+id/state_view"
                android:layout_alignEnd="@+id/state_view"
                android:textSize="22dp"
                android:textColor="#000" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:ems="10"
                android:id="@+id/target_edit"
                android:layout_alignBottom="@+id/target_view"
                android:layout_alignStart="@+id/state_edit"
                android:layout_alignEnd="@+id/state_edit"
                android:hint="dd/mm/yyyy"
                android:textSize="18dp"
                android:textColor="#000" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/authors"
                android:hint="Add Each Author on a new Line"
                android:maxLines="30"
                android:textSize="18dp"
                android:textColor="#000"
                android:layout_below="@+id/target_edit"
                android:layout_alignStart="@+id/target_edit"
                android:layout_weight="1"
                android:singleLine = "true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/author_view"
                android:layout_marginTop="30dp"
                android:textSize="22dp"
                android:text="Authors"
                android:textColor="#000"
                android:layout_below="@+id/target_view"
                android:layout_alignEnd="@+id/target_view"
                />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:id="@+id/submit"
            android:maxHeight="10dp"
            android:longClickable="false"
            android:layout_marginTop="86dp"
            android:layout_below="@+id/authors"
            android:layout_centerHorizontal="true" />


    </RelativeLayout >
</ScrollView>
