<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.codinginfinity.android">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/app_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.codinginfinity.android.Login"
            android:label="@string/title_activity_login"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.codinginfinity.android.AddPublication"
            android:label="@string/title_activity_add_publication"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.codinginfinity.android.ViewPublications"
            android:label="@string/title_activity_view_publications"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.codinginfinity.android.AddPublicationAsSuper"
            android:label="@string/title_activity_add_publication_as_super"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.codinginfinity.android.MainMenu"
            android:label="@string/menu_activity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.codinginfinity.android.EditPublication"
            android:label="@string/title_activity_edit_publication"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>
</manifest>


