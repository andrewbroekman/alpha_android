<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/up"
    tools:context="com.example.jocelyn.testing.Edit_Publication"
    android:id="@id/action_bar_title">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Author: "
        android:id="@+id/Author"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Title: "
        android:id="@+id/Title"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/Author"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Year: "
        android:id="@+id/Year"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/Title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Edition: "
        android:id="@+id/Edition"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/Year"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Type: "
        android:layout_marginTop="20dp"
        android:id="@+id/Type"
        android:layout_below="@+id/Edition"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="ISBN: "
        android:layout_marginTop="20dp"
        android:id="@+id/ISBN"
        android:layout_below="@+id/Type"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_marginTop="20dp"
        android:text="Publishing house: "
        android:id="@+id/PubHouse"
        android:layout_below="@+id/ISBN"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SAVE INFO."
        android:id="@+id/button_SAVE"
        android:layout_marginBottom="54dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"

        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CANCEL"
        android:id="@+id/button_CANCEL"
        android:layout_alignTop="@+id/button_SAVE"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-10dp"
        android:id="@+id/Author_edit"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/Author"
        android:layout_alignRight="@+id/button_CANCEL"
        android:layout_alignEnd="@+id/button_CANCEL" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Title_edit"
        android:layout_below="@+id/Author"
        android:layout_marginTop="40dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/Title"
        android:layout_alignRight="@+id/button_CANCEL"
        android:layout_alignEnd="@+id/button_CANCEL"
        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:id="@+id/Year_edit"
        android:layout_below="@+id/Title"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/Year"
        android:layout_alignRight="@+id/button_CANCEL"
        android:layout_alignEnd="@+id/button_CANCEL"
        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:id="@+id/Edition_edit"
        android:layout_below="@+id/Year"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/Edition"
        android:layout_alignRight="@+id/button_CANCEL"
        android:layout_alignEnd="@+id/button_CANCEL"
        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="195dp"
        android:id="@+id/Type_edit"
        android:layout_below="@+id/Edition"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/Type"
        android:layout_alignRight="@+id/button_CANCEL"
        android:layout_alignEnd="@+id/button_CANCEL"
        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="240dp"
        android:id="@+id/ISBN_edit"
        android:layout_below="@+id/Type"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/ISBN"
        android:layout_alignRight="@+id/button_CANCEL"
        android:layout_alignEnd="@+id/button_CANCEL"
        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="290dp"
        android:id="@+id/PubHouse_edit"
        android:layout_below="@+id/ISBN"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/PubHouse"
        android:layout_alignRight="@+id/button_CANCEL"
        android:layout_alignEnd="@+id/button_CANCEL"
        />

</RelativeLayout>
